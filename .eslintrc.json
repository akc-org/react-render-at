{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "comma-dangle": "error",
    "quotes": ["error", "single"],
    "func-call-spacing": "off",
    "no-unexpected-multiline": "off",
    "quote-props": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}